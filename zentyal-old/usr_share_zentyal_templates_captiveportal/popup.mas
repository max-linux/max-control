<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title>Portal Cautivo</title>
  <meta http-equiv=Content-Type content="text/html; charset=utf-8" />
  <meta http-equiv="refresh" content="15" />
  <link href="/dynamic-data/css/captiveportal.css" type="text/css" rel="stylesheet" />
  <script src="/data/js/prototype.js" type="text/javascript"></script>
  <script type="text/javascript">
    function logout() {
        // Set loading
        $('logout').replace('<img src="/data/images/ajax-loader.gif" />');

        // Ajax logout
        new Ajax.Request('/Logout', {

            onComplete: function(response) {
                if (403 == response.status) {
                    // logout successful, close popup
                    window.close();
                    return;
                }
                // Error, try without ajax:
                location.href = "/Logout";
            }
        });
    }
  </script>
</head>
<body style="margin: 0">
   <div id='login' class="popup">
       <img src="/data/images/title-login.png" alt="EducaMadrid Logo" id="logo" style="float: none; margin: 0 auto; display: block"/>
       <div style="padding: 15px">
         Mantenga esta ventana abierta, mientras use la conexi√≥n a Internet.
       </div>
       <div id="logout"><a href="#" onclick="logout()">Salir</a></div>
     </div>
</body>
</html>

