<%args>
  $reason => ""
  $destination
  $origDestination => ''
</%args>
<%init>
use EBox::Gettext;
</%init>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html xmlns="http://www.w3.org/1999/xhtml"><HEAD><TITLE>Portal Cautivo</TITLE>
<meta http-equiv=Content-Type content="text/html; charset=utf-8">
<link href="/dynamic-data/css/captiveportal.css" type="text/css" rel="stylesheet" />
<script src="/data/js/common.js" type="text/javascript">//</SCRIPT>
</head>
<body onload="document.getElementById('credential_0').focus();">
<script src="/data/js/capsLock.js" type="text/javascript">//</script>
<center>
	<form name='login' action='/LOGIN' method='post'>
                <div class="warning" id="capsWarning" style="display: none">
                  <% __('Warning: Caps Lock is enabled')%>
                </div>
	<table id="login">
          <tr>
            <td rowspan="4" id="logotd">
              <img src="/data/images/title-login.png" alt="EducaMadrid Logo" id="logo"/> 
            </td>
            <td colspan="2">
                <center><h2 style="color: #333">Portal cautivo</h2></center>
            <div class="warning" id="capsWarning" style="display: none"> 
                Warning: Caps Lock is enabled
            </div>
%		if(length($reason)){
			<div id='reason'><% $reason %></div>
%		}
          </tr>
          <tr>
            <td class="labeltd">Usuario:</td>
            <td><input  class='inputTextLogin' type='text'
                    name='credential_0'
                    id='credential_0'
                    /></td>
          </tr>
          <tr>
            <td class="labeltd">Contrase√±a:</td>
            <td><input class='inputTextLogin' type='password'
                    name='credential_1'
                    id='credential_1'
                    /></td>
                <input type='hidden' name='destination'
                    value='<% $destination %>' />
                <input type='hidden' name='origDestination'
                    value='<% $origDestination %>' />
          </tr>
          <tr>
            <td></td>
            <td><input class='inputButton' type='submit'
                    id='loginButton'
                    value="Entrar"/></td>
          </tr>
        </table>
    </form>
	</div>
</center>
<div id="footer">
    Portal cautivo para <a href="http://educa.madrid.org/">EducaMadrid</a> creado por <a href="http://www.zentyal.com/">Zentyal S.L.</a>
</div>
<script src="/data/js/help.js" type=text/javascript>//</SCRIPT>
</body>
</html>
